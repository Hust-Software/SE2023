/**index.wxss**/
.change {
  color: #8995a1;
  padding: 20rpx 40rpx;
  font-size: 40rpx;
  display: flex;
  align-items: center;
}
.change .icon-down {
  color: #8995a1;
  margin-left: 20rpx;
}

.input-area {
  position: relative;
  font-size: 35rpx;
}
.textarea-wrap {
  background: #fff;
  border-bottom: 1px solid #c7cee0;
}
.input-area textarea {
  background-color: #fff;
  padding: 30rpx 0 30rpx 30rpx;
  width: calc(100% - 48rpx);
  margin: 0;
  box-sizing: border-box;
}
.input-area .text-area{
  font-size: 30rpx;
}
.input-area .icon-close {
  position: absolute;
  right: 12rpx;
  top: 20rpx;
  z-index: 100;
  color: #888;
}

.input-area .text-area {
  min-height: 80rpx;
  padding: 40rpx;
  background-color: #fff;
}

.input-area .text-title {
  font-size: 30rpx;
  color: #8995a1;
}

.input-area .text-result {
  padding: 20rpx 0;
}

.box {
  background:#fff;
  margin-top: 10rpx; 
  padding: 10rpx;
  color: #FFF;
  font-size: 42rpx;
}

.text-area .text-title{
  font-size: 45rpx;
}